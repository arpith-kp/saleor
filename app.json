{
  "name": "saleor",
  "description": "An e-commerce storefront for Python and Django",
  "repository": "https://github.com/arpith-kp/saleor",
  "website": "https://kmvdistributors.com",
  "logo": "https://mirumee.com/img/opensource-saleor.png",
  "keywords": [
    "saleor",
    "e-commerce",
    "django"
  ],
  "image": "heroku/python",
  "env": {
    "DJANGO_SETTINGS_MODULE": "saleor.settings",
    "NODE_ENV": "production",
    "DEBUG": "False",
    "NPM_CONFIG_PRODUCTION": "false",
    "OPENEXCHANGERATES_API_KEY": {
      "description": "Open Exchange rates APP ID",
      "value" : "",
      "required": false
    },
    "ALLOWED_HOSTS": {
      "description": "Comma-separated list of hosts",
      "value": ".herokuapp.com"
    },
    "DEFAULT_FROM_EMAIL": "noreply@example.com",
    "SECRET_KEY": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "INSTAMOJO_API_KEY" : {
      "description": "Instamojo API key",
      "value": "",
      "required": false
    },
    "INSTAMOJO_AUTH_TOKEN" : {
      "description": "Instamojo AUTH token",
      "value": "",
      "required": false
    },
    "INSTAMOJO_SANDBOX" : {
      "description": "Instamojo Sandbox credentials ",
      "value": false,
      "required": false
    },
    "AWS_MEDIA_BUCKET_NAME": {
      "description": "If you intend to upload your own product images, we strongly recommend configure S3.",
      "value": "",
      "required": false
    },
    "AWS_ACCESS_KEY_ID": {
      "description": "",
      "value": "",
      "required": false
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "",
      "value": "",
      "required": false
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev",
    "scheduler:standard"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-python.git"
    }
  ],
  "success_url": "/"
}
